@model ITP.Models.Signup

@{
    ViewData["Title"] = "Create";
}

<h2>Signup</h2>

<p>Here you can sign up for our very interesting newsletter. Just enter your email below.<br>Your email will not be given away to any nigerian princes or long forgotten relatives.</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<p>(If entering your email crashes the site, your email is already registered, so don't worry!)</p>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
